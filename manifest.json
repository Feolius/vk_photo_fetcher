{
  "manifest_version": 2,

  "name": "VK photo fetcher",
  "description": "This extension extract images from VK chats and save it in Google Photo Album",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [ "tabs", "storage" , "http://*/*", "https://*/*" ]
}